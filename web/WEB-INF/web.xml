<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servletsSession.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>servletsSession.signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>validate</servlet-name>
        <servlet-class>servletsSession.validate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>servletsJSON.profile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>comment</servlet-name>
        <servlet-class>servletsSave.comment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listcomments</servlet-name>
        <servlet-class>servletsJSON.listcomments</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usuario_dp</servlet-name>
        <servlet-class>servletsSave.usuario_dp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usuario_general</servlet-name>
        <servlet-class>servletsGet.usuario_general</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>experiencia_usuario</servlet-name>
        <servlet-class>servletsSave.experiencia_usuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>validate</servlet-name>
        <url-pattern>/validate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>comment</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listcomments</servlet-name>
        <url-pattern>/listcomments</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>usuario_dp</servlet-name>
        <url-pattern>/usuario_dp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>usuario_general</servlet-name>
        <url-pattern>/usuario_general</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>experiencia_usuario</servlet-name>
        <url-pattern>/experiencia_usuario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
